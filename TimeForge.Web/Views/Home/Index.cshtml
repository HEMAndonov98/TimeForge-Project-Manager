@{
    ViewData["Title"] = "Welcome";
    bool isLoggedIn = (bool)(this.ViewData["IsLoggedIn"] ?? false);
    var username = User.Identity?.Name ?? "User";
    var today = DateTime.Now;
}

@if (isLoggedIn)
{
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8 col-sm-10">
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body text-center p-4">

                        <!-- Date Display -->
                        <div class="d-flex justify-content-center align-items-center mb-3">
                            <div>
                                <div class="fs-5 fw-bold text-secondary">@today.ToString("ddd")</div>
                                <div class="display-4 fw-bold text-primary">@today.Day</div>
                                <div class="fs-5 text-muted">@today.ToString("MMM")</div>
                            </div>
                        </div>

                        <!-- Greeting -->
                        <h2 class="fw-bold mb-2">
                            <span id="greeting-text"></span>, <span class="text-primary">@username</span>
                        </h2>
                        <p class="lead text-muted mb-0">Time to continue your work</p>

                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <!-- Welcome Banner -->
    <div class="p-5 mb-4 bg-light rounded-3 shadow-sm">
        <div class="container-fluid py-5 text-center">
            <h1 class="display-5 fw-bold">Welcome to TimeForge</h1>
            <p class="col-md-8 mx-auto fs-5 text-muted">
                Organize your projects, track your tasks, and forge your time with precision.
            </p>
            <div class="mt-4 d-md-block d-flex flex-column gap-1 justify-content-center align-items-center">
                <a  class="btn btn-primary btn-lg lg-me-2"
                    asp-area="Identity"
                    asp-page="/Account/Login">Sign In</a>
                <a class="btn btn-outline-secondary btn-lg"
                   asp-area="Identity"
                   asp-page="/Account/Register">Register</a>
            </div>
        </div>
    </div>
}

@section Scripts {
    <script>
        function getGreeting() {
            const hour = new Date().getHours();
            if (hour < 12) return "Good Morning";
            if (hour < 18) return "Hello";
            return "Good Evening";
        }
        document.getElementById("greeting-text").textContent = getGreeting();
    </script>
}