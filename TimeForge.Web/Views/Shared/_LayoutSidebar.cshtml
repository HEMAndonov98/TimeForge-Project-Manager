<!-- Sidebar Partial View -->
<aside class="app-sidebar rounded shadow bg-dark" data-bs-theme="dark">
    <!--begin::Sidebar Brand-->
    <div class="sidebar-brand p-2">
        <a asp-page="/Account/Manage/Index"
           asp-area="Identity"
           class="brand-link">
            <i class="fa-regular fa-user"></i>
            <span class="brand-text fw-light">@User.Identity?.Name</span>
        </a>
    </div>
    <!--end::Sidebar Brand-->
    <div class="sidebar-wrapper">
        <nav class="mt-2">
            <ul
                class="nav sidebar-menu flex-column"
                data-bs-toggle="treeview"
                role="navigation"
                aria-label="Main navigation"
                data-accordion="false"
                id="navigation"
            >
                <li class="nav-item menu-open">
                    <a href="#" class="nav-link active">
                        <i class="nav-icon fa-solid fa-bullseye"></i>
                        <p>
                            My Dashboard
                            <i class="nav-arrow bi bi-chevron-right"></i>
                        </p>
                    </a>
                    <ul class="nav nav-treeview">
                        <li class="nav-item">
                            <a asp-controller="Project" 
                               asp-action="Index" 
                               asp-area="" 
                               class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" &&
    ViewContext.RouteData.Values["controller"]?.ToString() == "Project" ? "active" : "")">
                                <i class="nav-icon bi bi-clipboard-data"></i>
                                <p>All my projects</p>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a  asp-controller="Project" 
                                asp-action="Upcoming"
                                asp-area="" 
                                class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Upcoming" ? "active" : "")">
                                <i class="nav-icon bi bi-paperclip"></i>
                                <p>Upcoming</p>
                            </a>
                        </li>
                    </ul>
                </li>
                <li class="nav-item">
                    <a asp-controller="Tag" 
                       asp-action="Index" 
                       asp-area="" 
                       class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" &&
                                       ViewContext.RouteData.Values["controller"]?.ToString() == "Tag" ? "active" : "")">
                        <i class="nav-icon bi bi-clipboard-data"></i>
                        <p>Tags</p>
                    </a>
                </li>
                <li class="nav-item">
                    <a asp-controller="TaskCollection" 
                       asp-action="Index" 
                       asp-area="" 
                       class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" &&
                                       ViewContext.RouteData.Values["List"]?.ToString() == "Tag" ? "active" : "")">
                        <i class="nav-icon fa-solid fa-list"></i>
                        <p>Todo Lists</p>
                    </a>
                </li>
                <!-- Create a calendar Controller with all projects laid out and list tasks -->
                <li class="nav-item">
                    <a asp-controller="Project" 
                       asp-action="Calendar" 
                       asp-area="" 
                       class="nav-link @(ViewContext.RouteData.Values["action"]?.ToString() == "Index" &&
                                       ViewContext.RouteData.Values["List"]?.ToString() == "Tag" ? "active" : "")">
                        <i class="nav-icon fa-solid fa-calendar"></i>
                        <p>Calendar</p>
                    </a>
                </li>
                <!-- ...rest of sidebar menu items... -->
            </ul>
        </nav>
    </div>
</aside>
