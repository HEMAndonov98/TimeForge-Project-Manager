@using TimeForge.ViewModels.Project
@model Dictionary<string, List<ProjectViewModel>>

@{
    ViewData["Title"] = "Upcoming Projects";
}

<div class="container mt-4">
    <div class="row">
        @foreach (var day in Model)
        {
            <div class="col-12 col-md-6 col-lg-4 mb-4">
                <div class="card shadow-sm h-100">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0">@day.Key</h5>
                    </div>
                    <div class="card-body">
                        @if (day.Value != null && day.Value.Any())
                        {
                            @foreach (var project in day.Value)
                            {
                                <div class="card mb-2 border-secondary">
                                    <div class="card-body p-2 d-flex flex-column justify-content-center align-items-center">
                                        <h6 class="card-title mb-1">
                                            <a asp-controller="Project" 
                                               asp-action="Details" 
                                               asp-route-projectId="@project.Id">
                                                @project.Name
                                            </a>
                                        </h6>
                                        @if (!string.IsNullOrEmpty(project.DueDate))
                                        {
                                            <p class="text-muted mb-1 ms-1">
                                                 Due: @project.DueDate
                                            </p>
                                        }
                                        <small class="text-muted">Created by: @project.CreatedBy</small>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <p class="text-muted mb-0">No projects</p>
                        }
                    </div>
                </div>
            </div>
        }
    </div>
</div>
