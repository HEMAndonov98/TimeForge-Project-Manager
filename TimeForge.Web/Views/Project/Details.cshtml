@using System.Collections.Specialized
@model TimeForge.ViewModels.Project.ProjectViewModel
@{
    ViewData["Title"] = "Project Details";
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="fw-bold mb-0">@Model.Name</h2>
            <p class="text-muted mb-1">Created by: <span class="fw-medium">@Model.CreatedBy</span></p>
            @if (!string.IsNullOrWhiteSpace(Model.DueDate))
            {
                <p class="text-muted small">Due: @Model.DueDate</p>
            }
        </div>
    </div>

    <!-- Tasks Section -->
    <div class="card shadow-sm border-0 mb-4">
        <div class="card-body">
            <h5 class="card-title text-muted">Tasks</h5>

            @if (Model.Tasks == null || !Model.Tasks.Any())
            {
                <p class="fst-italic text-muted">No tasks yet for this project.</p>
            }
            else
            {
                <ul class="list-group list-group-flush">
                    @foreach (var task in Model.Tasks)
                    {
                        <li class="list-group-item d-flex align-items-center ps-0">
                            <input class="form-check-input me-2" type="checkbox" disabled @(task.IsCompleted ? "checked" : "") />
                            <span class="@(task.IsCompleted ? "text-decoration-line-through text-muted" : "")">@task.Name</span>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>

    <!-- Tags Section + Modal Trigger -->
    <div class="card shadow-sm border-0 mb-5">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-2">
                <h5 class="card-title text-muted mb-0">Tags</h5>
                <button class="btn btn-outline-primary btn-sm" data-bs-toggle="modal" data-bs-target="#addTagModal">
                    + Add Tag
                </button>
            </div>

            @if (Model.Tags == null || !Model.Tags.Any())
            {
                <p class="fst-italic text-muted">No tags assigned to this project.</p>
            }
            else
            {
                <div>
                    @foreach (var tag in Model.Tags)
                    {
                        <span class="badge bg-secondary me-1">@tag.Name</span>
                    }
                </div>
            }
        </div>
    </div>
</div>

<!-- Add Tag Modal -->
<div class="modal fade" id="addTagModal" tabindex="-1" aria-labelledby="addTagModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content shadow-sm">
            <div class="modal-header">
                <h5 class="modal-title fw-bold" id="addTagModalLabel">Add New Tag</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <div class="modal-body" id="createTagContainer">
                @await Component.InvokeAsync("CreateTag", new { userId = Model.UserId })
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
}
