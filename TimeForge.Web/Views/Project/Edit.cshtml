@using TimeForge.ViewModels.Project
@model ProjectInputModel

@{
    ViewData["Title"] = "Edit Project";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h2 class="fw-bold mb-4 text-center">Edit Project</h2>

                    <form asp-action="Edit" method="post">
                        @* Hidden fields *@
                        <input type="hidden" asp-for="Id" />
                        <input type="hidden" asp-for="UserId" />

                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        @* Project Name *@
                        <div class="form-floating mb-3">
                            <input asp-for="Name" class="form-control" placeholder="Project name" />
                            <label asp-for="Name">Project Name</label>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        @* Due Date *@
                        <div class="form-floating mb-3">
                            <input asp-for="DueDate" type="date" class="form-control" placeholder="Due Date" />
                            <label asp-for="DueDate">Due Date (optional)</label>
                            <span asp-validation-for="DueDate" class="text-danger small"></span>
                        </div>

                        @* Visibility *@
                        <div class="form-check mb-3">
                            <input asp-for="IsPublic" class="form-check-input" type="checkbox" id="isPublicCheckbox" />
                            <label class="form-check-label" for="isPublicCheckbox">
                                Make project public
                            </label>
                        </div>

                        @* Tags display (readonly) *@
                        <div class="mb-3">
                            <label class="form-label fw-semibold">Tags</label>
                            <partial name="_TagInputPartial", model="Model.Tags"/>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-primary btn-lg shadow-sm">Save Changes</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}