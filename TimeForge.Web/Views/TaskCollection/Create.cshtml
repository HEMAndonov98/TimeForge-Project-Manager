@using TimeForge.ViewModels.List

@model TaskCollectionInputModel

@{
    ViewData["Title"] = "Create New Task List";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-0">
                <div class="card-body p-4">
                    <h3 class="fw-bold mb-4 text-primary">Create New Task List</h3>

                    <form asp-action="Create" 
                          asp-controller="TaskCollection" 
                          method="post"
                          asp-area="" >
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <!-- Task List Title -->
                        <div class="form-floating mb-4">
                            <input asp-for="Title" class="form-control" placeholder="Task list title" />
                            <label asp-for="Title">List title</label>
                            <span asp-validation-for="Title" class="text-danger small"></span>
                        </div>

                        <!-- Submit -->
                        <button type="submit" class="btn btn-primary w-100">Create List</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}