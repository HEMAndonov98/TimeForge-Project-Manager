@using TimeForge.ViewModels.List

@model IEnumerable<TaskCollectionViewModel>

@{
    ViewData["Title"] = "My Task Lists";
    var hasLists = Model != null && Model.Any();
}

<div class="container mt-5">
    @if (!hasLists)
    {
        <div class="text-center bg-light border rounded p-5 shadow-sm">
            <h4 class="mb-3">No current task lists</h4>
            <p class="text-muted">Start by creating your first list and organize your work Kanban style.</p>
            <a class="btn btn-primary btn-lg mt-3" 
               asp-controller="TaskCollection" 
               asp-action="Create"
               asp-area="">Create List</a>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var list in Model)
            {
                <div class="col-lg-4 col-md-6">
                    <div class="card shadow-sm border-0 rounded-4 h-100 d-flex flex-column">
                        <div class="card-body d-flex flex-column">
                            <!-- List Title -->
                            <h5 class="card-title fw-bold text-primary mb-3">@list.Title</h5>

                            <!-- Tasks -->
                            <div class="flex-grow-1 mb-3 overflow-auto" style="max-height: 250px;">
                                @if (list.Tasks != null && list.Tasks.Any())
                                {
                                    <ul class="list-group list-group-flush">
                                        @foreach (var task in list.Tasks)
                                        {
                                            <li class="list-group-item d-flex justify-content-between align-items-center px-2">
                                                <span>@task.Description</span>
                                                @if (task.IsCompleted)
                                                {
                                                    <span class="badge bg-success">Done</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">Pending</span>
                                                }
                                            </li>
                                        }
                                    </ul>
                                }
                                else
                                {
                                    <p class="text-muted fst-italic text-center">No tasks yet</p>
                                }
                            </div>

                            <!-- Add Task -->
                            <form asp-controller="Tasks" asp-action="Create" method="post" class="mt-auto">
                                <input type="hidden" name="ListId" value="@list.Id" />
                                <div class="input-group">
                                    <input type="text" name="Title" class="form-control" placeholder="New task..." required />
                                    <button class="btn btn-outline-primary" type="submit">Add</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Floating Add List Button -->
        <div class="text-center mt-5">
            <a class="btn btn-primary btn-lg rounded-pill shadow" asp-controller="TaskLists" asp-action="Create">
                + Create New List
            </a>
        </div>
    }
</div>
