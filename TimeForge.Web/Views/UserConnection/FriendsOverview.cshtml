@using TimeForge.ViewModels.UserConnection;
@model UserConnectionViewModel
@{
    ViewData["Title"] = "Friend Overview";
}

<div class="container my-4">
    <h2 class="mb-4 text-center">Friend Overview</h2>

    <div class="row g-4">
        <!-- Current Friends -->
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Current Friends</h5>
                </div>
                <div class="card-body">
                    @if (Model.AcceptedRequests != null && Model.AcceptedRequests.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var friend in Model.AcceptedRequests)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span> @if(!string.IsNullOrEmpty(friend.FromUsername)) { <span>(@friend.FromUsername)</span> }</span>
                                    <button class="btn btn-sm btn-outline-danger" onclick="handleRemoveFriend(@friend.FromUserID)">Remove</button>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">You have no friends yet ðŸ˜¢</p>
                    }
                </div>
            </div>
        </div>

        <!-- Pending Requests -->
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-warning">
                    <h5 class="mb-0">Pending Requests</h5>
                </div>
                <div class="card-body">
                    <!-- Sent Requests -->
                    <h6 class="text-muted mb-2">Sent Requests</h6>
                    @if (Model.PendingSentRequests != null && Model.PendingSentRequests.Any())
                    {
                        <ul class="list-group list-group-flush mb-3">
                            @foreach (var request in Model.PendingSentRequests)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@request.ToUsername</span>
                                    <button class="btn btn-sm btn-outline-secondary" onclick="handleCancelRequest()">Cancel</button>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No sent requests</p>
                    }

                    <!-- Received Requests -->
                    <h6 class="text-muted mt-3 mb-2">Received Requests</h6>
                    @if (Model.PendingReceivedRequests != null && Model.PendingReceivedRequests.Any())
                    {
                        <ul class="list-group list-group-flush">
                            @foreach (var request in Model.PendingReceivedRequests)
                            {
                                <li class="list-group-item d-flex justify-content-between align-items-center">
                                    <span>@request.FromUsername</span>
                                    <div class="btn-group">
                                        <button class="btn btn-sm btn-outline-success" onclick="handleAcceptRequest()">Accept</button>
                                        <button class="btn btn-sm btn-outline-danger" onclick="handleDeclineRequest()">Decline</button>
                                    </div>
                                </li>
                            }
                        </ul>
                    }
                    else
                    {
                        <p class="text-muted">No pending requests</p>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-2">
        <div class="col-12 col-lg-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-info">
                    <h5 class="mb-0">
                        Add Friends
                    </h5>
                </div>
                <div class="card-body">
                    @await Html.PartialAsync("AddFriends", new AddFriendInputModel())
                </div>
            </div>
        </div>
    </div>
</div>

