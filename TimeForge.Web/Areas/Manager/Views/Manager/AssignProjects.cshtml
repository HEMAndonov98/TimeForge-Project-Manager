@using TimeForge.Web.Areas.Manager.ViewModels
@model ProjectAssignmentViewModel

@{
    ViewData["Title"] = "Assign Projects to Users";
}
<section class="content">
    <div class="container-fluid">
        <h2 class="mb-4">Assign Projects to Users</h2>

        <table class="table table-bordered table-hover w-auto" style="table-layout: auto;">
            <thead class="table-light">
                <tr>
                    <th>Project</th>
                    <th>Due Date</th>
                    <th class="text-nowrap">Assign To</th>
                    <th style="width: 1%;">Status</th>
                    <th>Created By</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var project in Model.Projects)
                {
                    <tr>
                        <td>@project.Name</td>
                        <td>@project.DueDate</td>
                        <td class="text-nowrap">
                            <form 
                                asp-action="AssignProject" 
                                asp-controller="Manager" 
                                method="post"
                                class="d-flex align-items-center gap-2">
                                <input 
                                    type="hidden" 
                                    asp-for="ProjectId" 
                                    value="@project.Id" />

                                <select
                                    asp-items="@Model.ManagedUsers"
                                    asp-for="UserId"
                                    name="userId"
                                    class="form-select form-select-sm w-100" 
                                    required>
                                </select>

                                <button type="submit" class="btn btn-sm btn-success">Assign</button>
                            </form>
                        </td>
                        <td>
                            @if (!string.IsNullOrEmpty(project.AssignedToUserId))
                            {
                                <span class="badge bg-info">Assigned</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">Unassigned</span>
                            }
                        </td>
                        <td class="w-auto text-lg-center">
                            <span class="badge bg-secondary">@project.CreatedBy</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>


<nav aria-label="Page navigation">
    <ul class="pagination justify-content-end">
        <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
            <a 
                class="page-link" 
                tabindex=@(Model.CurrentPage == 1 ? -1 : 0) 
                aria-label="Previous"
                asp-area="Manager" 
                asp-controller="Manager" 
                asp-action="AssignProjects" 
                asp-route-page="@(Model.CurrentPage - 1)">
                <span aria-hidden="true">&laquo;</span>
                <span class="sr-only">Previous</span>
            </a>
        </li>
        @for (int i = 1; i <= Model.TotalPages; i++)
        {
            <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                <a 
                    class="page-link" 
                    asp-area="Manager" 
                    asp-controller="Manager" 
                    asp-action="AssignProjects" 
                    asp-route-page="@i">@i</a>
            </li>
        }
        <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
            <a 
                class="page-link" 
                aria-label="Next" 
                tabindex=@(Model.CurrentPage == Model.TotalPages ? -1 : 0 )
                asp-area="Manager" 
                asp-controller="Manager" 
                asp-action="AssignProjects" 
                asp-route-page="@(Model.CurrentPage + 1)">
                <span aria-hidden="true">&raquo;</span>
                <span class="sr-only">Next</span>
            </a>
        </li>
    </ul>
</nav>