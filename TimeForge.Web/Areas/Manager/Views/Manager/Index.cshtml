@{
ViewData["Title"] = "Manager Dashboard";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashboard</h1>
            </div>
        </div>
    </div>
</div>
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box">
                    <span class="info-box-icon bg-info elevation-1"><i class="fas fa-cog"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Projects Started</span>
                        <span id="projects-count" class="info-box-number">@ViewData["ProjectsCount"]</span>
                    </div>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-success elevation-1"><i class="fas fa-check-circle"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Task Completion</span>
                        <span id="task-completion-percentage" class="info-box-number">@ViewData["CompletionTaskPercentage"]</span>
                    </div>
                </div>
            </div><div class="col-12 col-sm-6 col-md-3">
                <div class="info-box mb-3">
                    <span class="info-box-icon bg-success elevation-1"><i class="fas fa-check-circle"></i></span>
                    <div class="info-box-content">
                        <span class="info-box-text">Task Completion</span>
                        <span id="task-completion-count" class="info-box-number">@ViewData["TaskCompletionCount"]</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title">Monthly Task Report</h5>
                    </div>
                    <div class="card-body">
                        <div class="chart">
                            <canvas id="tasksChart" style="height: 250px;"></canvas>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div></section>
@section Scripts {
<script src="~/adminlte/plugins/chart.js/chart.min.js"></script>

<script>
    $(function () {
        'use strict'

        // --- Initialize Chart ---
        var tasksChartCanvas = $('#tasksChart').get(0).getContext('2d');
        var tasksChart = new Chart(tasksChartCanvas, {
            type: 'bar',
            data: {
                labels: ['January', 'February', 'March', 'April', 'May', 'June', 'July'],
                datasets: [
                    {
                        label: 'Completed Tasks',
                        backgroundColor: 'rgba(40, 167, 69, 0.7)', // Green
                        borderColor: 'rgba(40, 167, 69, 1)',
                        data: [70, 85, 90, 81, 76, 75, 80]
                    },
                    {
                        label: 'New Tasks',
                        backgroundColor: 'rgba(0, 123, 255, 0.7)', // Blue
                        borderColor: 'rgba(0, 123, 255, 1)',
                        data: [100, 120, 110, 95, 85, 90, 105]
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: { // Note: 'yAxes' is deprecated, use 'y'
                        beginAtZero: true
                    }
                }
            }
        });
    });
</script>
}