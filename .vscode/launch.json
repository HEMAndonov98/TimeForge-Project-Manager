{

    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch TimeForge.Api (Development)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/TimeForge.Api/bin/Debug/net8.0/TimeForge.Api.dll",
            "args": [
                "--urls",
                "http://localhost:5050"
            ],
            "cwd": "${workspaceFolder}/TimeForge.Api",
            "stopAtEntry": false,
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        }
    ]
}
